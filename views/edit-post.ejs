<%- include ("partials/header.ejs") %>
<div class="container mx-auto">
    <h1 class="text-3xl font-bold my-8">Edit Post</h1>
    <form action="/edit-post/<%= post._id %>" method="post">
      <div class="mb-4">
        <label for="title" class="block text-gray-700 font-bold mb-2">Title:</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" class="border rounded-md px-4 py-2 w-full">
      </div>
      <div class="mb-4">
        <label for="content" class="block text-gray-700 font-bold mb-2">Content:</label>
        <textarea id="content" name="content" rows="5" class="border rounded-md px-4 py-2 w-full"><%= post.content %></textarea>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Update</button>
    </form>
  </div>
  <%- include ("partials/footer.ejs") %>